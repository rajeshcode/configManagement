---

# 
# before running playbook, replace <LIST> with "nox-all" :
# 
# sed -i.BAK 's/^- hosts: <LIST>/- hosts: nox-all/g' start-nox.yml
#
#
# to stop hdp1: 
# ansible-playbook -i ../../hosts/nox start-nox.yml -t start-hdp1 -f 10
#
# to stop hdp2: 
# ansible-playbook -i ../../hosts/nox start-nox.yml -t start-hdp2 -f 10
#
#
# after done with playbook, change hosts list back to <LIST>
#
# sed -i.BAK 's/^- hosts: nox-all/- hosts: <LIST>/g' start-nox.yml
#


- hosts: <LIST>
  vars_files:
  - vars/main.yml

  tasks:
  - include: restart/start-hdfs.yml
  - include: restart/start-mapred.yml
  - include: restart/start-zk.yml
  - include: restart/start-hbase.yml
